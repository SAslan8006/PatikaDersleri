extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/forms.css")

block content   
    if errorMessage 
        div.alert.alert-danger.col-sm-7 #{errorMessage}

    form(action="/new-password" method="POST")
        input(type="hidden" name="_csrf" value=`${csrfToken}`)
        input(type="hidden" name="userId" value=`${userId}`)
        input(type="hidden" name="passwordToken" value=`${passwordToken}`)

        .form-group.row
            label(for="password").col-sm-1.col-form-label Password
            .col-sm-5.pr-0
                input.form-control#password(type="password" name="password")
                
        .form-group.row
            .col-sm-5.offset-sm-1
                input(type="submit" value="Submit").btn.btn-primary   
           
